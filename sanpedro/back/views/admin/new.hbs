<div class="new"><div class="container">
    <div class="row">
        <div class="col-6 0ffset-3">
            <h4>Agregar una novedad</h4>
            <form action="/admin/novedades/new" method="post"
            enctype="multipart/form-data" style="border: 2px solid rgb(255, 65, 65); padding:28px; border-radius:10px; width:700px">
            <div class="mb-3 row">
                <input type="text" class="form-control" placeholder="Titulo" name="titulo">
            </div>
            <div class="mb-3 row">
                <input type="text" class="form-control" placeholder="Subtitulo" name="subtitulo">
            </div>
            <div class="mb-3 row">
                <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"/></label>
            </div>
            <div class="mb-3 row"> <label for="">Cuerpo</label>
                        <textarea name="cuerpo" class="form-control">{{novedad.cuerpo}}</textarea>
                    </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div></div>