<div class="new">
    <div class="container">
        <div class="row">
            <div class="col-6 0ffset-3">
                <h4>Editar una novedad</h4>
                <form action="/admin/novedades/editar" method="post" enctype="multipart/form-data" style="border: 2px solid rgb(255, 65, 65); padding:28px; border-radius:10px; width:700px">
                    <input type="hidden" value="{{novedad.id}}" name="id">
                    <div class="form-group"> <label for="">Titulo</label>
                        <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                    </div>
                    <div class="form-group"> <label for="">Subtitulo</label>
                        <input type="text" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}">
                    </div>
                    <div class="form-group"> <label for="">Cuerpo</label>
                        <textarea name="cuerpo" class="form-control">{{novedad.cuerpo}}</textarea>
                    </div>
                    <div class="form-group">
                        <p><label>Imagen: <input type="file" name="imagen" id="imagen" class="form-control"></label></p>
                        <p><label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}"></p>
                    </div>

                    <button type="submit" class="btn btn-primary">Modificar</button>
                </form>
                {{#if error}}
                <p>{{message}}</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>